@model User;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Project Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<body>
    <div class="login-container">
        <div class="row g-0 h-100">

            <!-- Left Side - Branding -->
            <div class="col-lg-6 d-none d-lg-block">
                <div class="left-side">
                    <div class="brand-overlay">
                        <div class="brand-content">
                            <h1 class="brand-title">
                                <i class="bi bi-kanban"></i> ProjectHub
                            </h1>
                            <p class="brand-subtitle">Manage your projects efficiently</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="col-lg-6">
                <div class="login-form-container">
                    <div class="login-form-wrapper">

                        <div class="text-center mb-4">
                            <h2 class="login-title">Welcome Back</h2>
                            <p class="text-muted">Login to your account</p>
                        </div>

                        <form asp-controller="Home" asp-action="Login" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display:@(ViewData.ModelState.IsValid ? "none" : "block");"></div>

                            <!-- Email -->
                            <input class="form-control mb-3" asp-for="UserEmail" placeholder="Enter your email" type="email" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>

                            <!-- Password -->
                            <input class="form-control mb-3" asp-for="UserPassword" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>

                            <!-- Login Button -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>

                            <!-- Divider -->
                            <div class="divider">
                                <span>OR</span>
                            </div>

                            <!-- Social Login -->
                            <div class="d-grid gap-2 mb-4">
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-google me-2"></i>
                                    Continue with Google
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-microsoft me-2"></i>
                                    Continue with Microsoft
                                </button>
                            </div>

                            <!-- Register Link -->
                            <div class="text-center">
                                <p class="signup-text">
                                    Don't have an account?
                                    <a asp-controller="Home" asp-action="Register" class="signup-link">
                                        Create one
                                    </a>
                                </p>
                            </div>
                        </form>

                        <!-- Back to Home -->
                        <div class="text-center mt-4">
                            <a asp-controller="Home" asp-action="Index" class="back-home">
                                <i class="bi bi-arrow-left me-1"></i>
                                Back to Home
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
