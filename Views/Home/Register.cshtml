@model User
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Project Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>

<body>
    <div class="register-container">
        <div class="row g-0 h-100">

            <!-- Left Side - Registration Form -->
            <div class="col-lg-6">
                <div class="register-form-container">
                    <div class="register-form-wrapper">
                        <div class="text-center mb-4">
                            <h2 class="register-title">Create Account</h2>
                            <p class="text-muted">Start managing your projects today</p>
                        </div>

                        <form asp-controller="Home" asp-action="Register" method="post">


                            <!-- Email / Password -->
                            <div class="mb-3">
                                <input class="form-control mb-3" asp-for="UserEmail" placeholder="Enter your email"  type="email"/>
                                <span asp-validation-for="UserEmail" class="text-danger"></span>
                                <input class="form-control" asp-for="UserPassword" placeholder="Enter your password"  type="password"/>
                                <span asp-validation-for="UserPassword" class="text-danger"></span>
                            </div>

                            <!-- Register Button -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Create Account
                                </button>
                            </div>

                            <!-- Divider -->
                            <div class="divider text-center my-3">
                                <span>OR</span>
                            </div>

                            <!-- Social Buttons -->
                            <div class="d-grid gap-2 mb-4">
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-google me-2"></i>
                                    Sign up with Google
                                </button>

                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-microsoft me-2"></i>
                                    Sign up with Microsoft
                                </button>
                            </div>

                            <!-- Login Link -->
                            <div class="text-center">
                                <p class="login-text">
                                    Already a user?
                                    <a asp-controller="Home" asp-action="Login" class="login-link">Login</a>
                                </p>
                            </div>

                        </form>

                        <!-- Back to Home -->
                        <div class="text-center mt-4">
                            <a asp-controller="Home" asp-action="Index" class="back-home">
                                <i class="bi bi-arrow-left me-1"></i>
                                Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side Banner -->
            <div class="col-lg-6 d-none d-lg-block">
                <div class="right-side">
                    <div class="brand-overlay">
                        <div class="brand-content">
                            <h1 class="brand-title">
                                <i class="bi bi-kanban"></i> ProjectHub
                            </h1>

                            <p class="brand-subtitle">Join thousands of teams</p>

                            <div class="features-list mt-4">
                                <div class="feature-item">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Easy project management</span>
                                </div>

                                <div class="feature-item">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Real-time collaboration</span>
                                </div>

                                <div class="feature-item">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Powerful analytics</span>
                                </div>

                                <div class="feature-item">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Free 14-day trial</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
