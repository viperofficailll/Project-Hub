@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Started - Project Management Software</title>

    <!-- Bootstrap CSS (if not already in _Layout.cshtml) -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/styles.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-kanban text-primary"></i> ProjectHub
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#pricing">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-3 fw-bold mb-4">Project Management Made Simple</h1>
                    <p class="lead mb-4">Streamline your workflow, collaborate with your team, and deliver projects on time with our powerful project management software.</p>
                    <div class="d-flex gap-3">
                        <a asp-controller="Home" asp-action="Login" class="btn btn-primary btn-lg px-4">Get Started</a>
                        <a href="#features" class="btn btn-outline-secondary btn-lg px-4">Learn More</a>
                    </div>
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="bi bi-check-circle-fill text-success"></i> No credit card required
                            <span class="mx-2">•</span>
                            <i class="bi bi-check-circle-fill text-success"></i> 14-day free trial
                        </small>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=800&q=80" alt="Team collaboration" class="img-fluid rounded shadow-lg">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Everything You Need to Succeed</h2>
                <p class="text-muted">Powerful features to help your team work smarter</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-kanban fs-1 text-primary"></i>
                        </div>
                        <h4>Task Management</h4>
                        <p class="text-muted">Organize and prioritize your tasks with intuitive boards and lists</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-people fs-1 text-primary"></i>
                        </div>
                        <h4>Team Collaboration</h4>
                        <p class="text-muted">Work together seamlessly with real-time updates and communication</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-graph-up fs-1 text-primary"></i>
                        </div>
                        <h4>Analytics & Reports</h4>
                        <p class="text-muted">Track progress and make data-driven decisions with detailed insights</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-calendar-event fs-1 text-primary"></i>
                        </div>
                        <h4>Timeline View</h4>
                        <p class="text-muted">Visualize project schedules and dependencies at a glance</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-shield-check fs-1 text-primary"></i>
                        </div>
                        <h4>Secure & Reliable</h4>
                        <p class="text-muted">Enterprise-grade security to keep your data safe and protected</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <div class="icon-box mb-3">
                            <i class="bi bi-phone fs-1 text-primary"></i>
                        </div>
                        <h4>Mobile Access</h4>
                        <p class="text-muted">Stay connected and manage projects on the go with mobile apps</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="fw-bold mb-3">Ready to Get Started?</h2>
                    <p class="lead mb-4">Join thousands of teams already managing their projects more efficiently</p>
                    <a asp-controller="Home" asp-action="Login" class="btn btn-light btn-lg px-5">Start Your Free Trial</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 ProjectHub. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-white text-decoration-none me-3">Privacy Policy</a>
                    <a href="#" class="text-white text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS (if not already in _Layout.cshtml) -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> -->
</body>
</html>
<!DOCTYPE html>
