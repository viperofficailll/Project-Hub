@model ProjectHub.Models.Project

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invite teammates</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/app-theme.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <div class="app-nav">
            <div>
                <h1 class="app-title mb-1">Invite teammates</h1>
                <p class="app-subtitle">Only the project owner can share access codes.</p>
            </div>
            <a asp-controller="Project" asp-action="Dashboard" class="app-button-primary text-decoration-none">
                <i class="bi bi-kanban me-2"></i>Back to dashboard
            </a>
        </div>

        <div class="app-section">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
                <div>
                    <div class="text-uppercase text-muted fw-semibold small">Project</div>
                    <div class="fs-4 fw-bold">@Model.ProjectName</div>
                </div>
                <div class="app-chip">
                    <i class="bi bi-crown"></i> Owner access
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="invite-panel">
                <div class="app-section-title">Current join code</div>

                @if (ViewBag.GeneratedToken != null)
                {
                    <div class="current-code">
                        <div class="code-value">@ViewBag.GeneratedToken</div>
                        <p class="text-muted mb-0">Share this 6-digit code with teammates. Generating a new code will invalidate the old one.</p>
                    </div>
                }
                else
                {
                    <p class="text-muted">You haven't generated a code yet.</p>
                }

                <form asp-action="GenerateToken" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="app-button-primary w-100">
                        <i class="bi bi-shuffle me-2"></i>Generate a fresh code
                    </button>
                </form>
            </div>
        </div>
    </div>

    <style>
        .invite-panel {
            background: linear-gradient(150deg, rgba(99, 102, 241, 0.08), rgba(79, 70, 229, 0.05));
            border-radius: 18px;
            padding: 1.75rem;
            border: 1px dashed rgba(99, 102, 241, 0.3);
        }

        .current-code {
            padding: 1.5rem;
            border-radius: 16px;
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(148, 163, 184, 0.3);
            margin-bottom: 1rem;
        }

        .code-value {
            font-size: clamp(2rem, 6vw, 3rem);
            letter-spacing: 0.25em;
            font-weight: 700;
            color: var(--primary-700);
            text-align: center;
        }
    </style>
</body>
</html>
