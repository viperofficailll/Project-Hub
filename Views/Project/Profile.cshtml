@model ProjectHub.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/app-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <div class="app-nav">
            <div>
                <h1 class="app-title mb-1">Your Profile</h1>
                <p class="app-subtitle">Manage the basics of your ProjectHub identity</p>
            </div>
            <a asp-controller="Project" asp-action="Dashboard" class="app-button-primary text-decoration-none">
                <i class="bi bi-kanban me-2"></i>Back to workspace
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger app-section">@TempData["Error"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success app-section">@TempData["SuccessMessage"]</div>
        }

        <div class="app-grid two">
            <div class="app-section">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="app-avatar">@Model.UserName?.FirstOrDefault()</div>
                    <div>
                        <div class="fw-semibold text-uppercase text-muted">Display name</div>
                        <div class="fs-4 fw-bold">@Model.UserName</div>
                    </div>
                </div>

                <form asp-action="UpdateProfile" method="post" class="profile-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Username</label>
                        <input class="form-control app-input" name="userName" value="@Model.UserName" required />
                        <small class="text-muted">This is shown to your teammates.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input class="form-control app-input" value="@Model.UserEmail" disabled />
                        <small class="text-muted">Contact support to change your email.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Joined ProjectHub</label>
                        <input class="form-control app-input" value="@Model.CreatedAt.ToString("MMM dd, yyyy")" disabled />
                    </div>

                    <button type="submit" class="app-button-primary w-100">Save changes</button>
                </form>
            </div>

            <div class="app-section">
                <div class="app-section-title">Security</div>
                <p class="text-muted">
                    Password updates and multi-factor authentication are coming soon. For now,
                    use the logout button below if you're on a shared device.
                </p>
                <form asp-controller="Home" asp-action="Logout" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger w-100">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
