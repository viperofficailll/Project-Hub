@model ProjectHub.ViewModels.CreateOrJoinViewModel
@{
    ViewData["Title"] = "Create or Join Project";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create or Join Project - Project Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/app-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/createorjoin.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-kanban text-primary"></i> ProjectHub
            </a>
            <div class="ms-auto">
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle fs-4"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><a class="dropdown-item" asp-controller="Project" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Home" asp-action="Logout" method="post" class="w-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-start">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <div class="container">
            <!-- Welcome Section -->
            <div class="welcome-section text-center mb-4">
                <h1 class="welcome-title">Welcome to ProjectHub!</h1>
                <p class="welcome-subtitle">Manage your projects or start something new</p>
            </div>

            <!-- Alerts -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Existing Projects Section -->
            @if (Model.OwnedProjects.Any() || Model.MemberProjects.Any())
            {
                <div class="mb-5">
                    <h3 class="mb-4"><i class="bi bi-folder2-open me-2"></i>Your Projects</h3>

                    <div class="row g-3">
                        <!-- Owned Projects -->
                        @foreach (var project in Model.OwnedProjects)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="card h-100 border-primary project-card">
                                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-crown-fill me-2"></i>Owner</span>
                                        <span class="badge bg-light text-primary">@project.ProjectType</span>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@project.ProjectName</h5>
                                        <p class="card-text text-muted small">
                                            @(string.IsNullOrEmpty(project.Description) ? "No description" :
                                                                                (project.Description.Length > 80 ? project.Description.Substring(0, 80) + "..." : project.Description))
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center text-muted small">
                                            <span><i class="bi bi-people me-1"></i>@project.Members.Count members</span>
                                            <span><i class="bi bi-calendar me-1"></i>@project.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-action="OpenProject" asp-route-id="@project.Id" class="btn btn-primary w-100">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Open Project
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Member Projects -->
                        @foreach (var project in Model.MemberProjects)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="card h-100 border-success project-card">
                                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-person-check-fill me-2"></i>Member</span>
                                        <span class="badge bg-light text-success">@project.ProjectType</span>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@project.ProjectName</h5>
                                        <p class="card-text text-muted small">
                                            @(string.IsNullOrEmpty(project.Description) ? "No description" :
                                                                                (project.Description.Length > 80 ? project.Description.Substring(0, 80) + "..." : project.Description))
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center text-muted small">
                                            <span><i class="bi bi-person me-1"></i>Owner: @project.Owner</span>
                                            <span><i class="bi bi-people me-1"></i>@project.Members.Count members</span>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-action="OpenProject" asp-route-id="@project.Id" class="btn btn-success w-100">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Open Project
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-4">
                <h4 class="text-center text-muted mb-4">Or start something new</h4>
            }

            <!-- Create/Join Options -->
            <div class="row g-4 justify-content-center">
                <!-- Create Project Card -->
                <div class="col-lg-5 col-md-6">
                    <div class="option-card create-card">
                        <div class="card-icon">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <h3 class="card-title">Create a Project</h3>
                        <p class="card-description">
                            Start a new project from scratch. Set up your workspace and invite team members.
                        </p>
                        <ul class="feature-list">
                            <li><i class="bi bi-check2"></i> Full project control</li>
                            <li><i class="bi bi-check2"></i> Invite team members</li>
                            <li><i class="bi bi-check2"></i> Customizable workflow</li>
                        </ul>
                        <button type="button" class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createProjectModal">
                            <i class="bi bi-plus-lg me-2"></i>Create New Project
                        </button>
                    </div>
                </div>

                <!-- Join Project Card -->
                <div class="col-lg-5 col-md-6">
                    <div class="option-card join-card">
                        <div class="card-icon">
                            <i class="bi bi-box-arrow-in-right"></i>
                        </div>
                        <h3 class="card-title">Join a Project</h3>
                        <p class="card-description">
                            Join an existing project using an invitation code shared by the project owner.
                        </p>
                        <ul class="feature-list">
                            <li><i class="bi bi-check2"></i> Quick access with code</li>
                            <li><i class="bi bi-check2"></i> Instant collaboration</li>
                            <li><i class="bi bi-check2"></i> Assigned roles & tasks</li>
                        </ul>
                        <a href="@Url.Action("Join", "Project")" class="btn btn-join">
                            <i class="bi bi-arrow-right-circle me-2"></i>Join Existing Project
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Project Modal -->
    <div class="modal fade" id="createProjectModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="Project" asp-action="Create" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="bi bi-folder-plus me-2"></i>Create New Project</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label class="form-label">Project Name</label>
                            <input name="ProjectName" class="form-control" placeholder="Enter project name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="3" placeholder="Describe your project..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Project Type</label>
                            <select name="ProjectType" class="form-select" required>
                                <option value="">Select type...</option>
                                <option value="Software Development">Software Development</option>
                                <option value="Marketing Campaign">Marketing Campaign</option>
                                <option value="Design Project">Design Project</option>
                                <option value="Research">Research</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-lg me-2"></i>Create Project
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var showModal = '@(ViewBag.ShowCreateModal ?? false)'.toLowerCase() === 'true';
            if (showModal) {
                var createModal = new bootstrap.Modal(document.getElementById('createProjectModal'));
                createModal.show();
            }
        });
    </script>

    <style>
        .project-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .project-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }
    </style>
</body>
</html>