@model IEnumerable<Project>
@{
    ViewData["Title"] = "My Projects";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Projects - ProjectHub</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .project-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .project-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
        }
        .btn-get-started {
            background: #667eea;
            border: none;
            padding: 10px 24px;
            font-weight: 600;
        }
        .btn-get-started:hover {
            background: #5a6fd8;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Nav (reuse your existing one) -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-kanban text-primary"></i> ProjectHub
            </a>
            <div class="ms-auto">
                <a asp-controller="Project" asp-action="Profile" class="btn btn-outline-primary">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-dark">Welcome back!</h1>
            <p class="lead text-muted">Choose a project to continue working</p>
        </div>

        @if (TempData["JoinSuccess"] != null)
        {
            <div class="alert alert-success text-center">
                <i class="bi bi-check-circle"></i> @TempData["JoinSuccess"]
            </div>
        }

        <div class="row g-4">
            @foreach (var project in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card project-card h-100">
                        <div class="card-header text-white">
                            <h5 class="mb-0">@project.ProjectName</h5>
                            <small><i class="bi bi-person-fill"></i> Owner: You</small>
                        </div>
                        <div class="card-body d-flex flex-column">
                            @if (!string.IsNullOrEmpty(project.Description))
                            {
                                <p class="text-muted flex-grow-1">@project.Description</p>
                            }
                            else
                            {
                                <p class="text-muted"><em>No description</em></p>
                            }

                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> Created @project.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>

                            <div class="mt-4">
                                <form asp-action="SelectProject" method="post" class="d-inline">
                                    <input type="hidden" name="projectId" value="@project.Id" />
                                    <button type="submit" class="btn btn-get-started text-white w-100">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-action="CreateOrJoin" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i> Create New Project
            </a>
            <a asp-action="CreateOrJoin" class="btn btn-link">or join another with code â†’</a>
        </div>
    </div>
</body>
</html>