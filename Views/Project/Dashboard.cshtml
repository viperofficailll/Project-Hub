@model Project
@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Text.Json;
@{
    var currentUserEmail = ViewBag.CurrentUserEmail as string;
    var currentUserName = ViewBag.CurrentUserName as string;
    var members = Model.Members?
        .Select(m => (Email: m.UserEmail, Name: string.IsNullOrWhiteSpace(m.UserName) ? m.UserEmail : m.UserName))
        .ToList() ?? new List<(string Email, string Name)>();

    if (!string.IsNullOrWhiteSpace(currentUserEmail) &&
        !members.Any(m => string.Equals(m.Email, currentUserEmail, StringComparison.OrdinalIgnoreCase)))
    {
        members.Add((currentUserEmail!, string.IsNullOrWhiteSpace(currentUserName) ? currentUserEmail! : currentUserName!));
    }

    var projectOwnerName = Model.Members?.FirstOrDefault(m => m.UserEmail == Model.Owner)?.UserName ?? Model.Owner;
    if (!string.IsNullOrWhiteSpace(Model.Owner) &&
        !members.Any(m => string.Equals(m.Email, Model.Owner, StringComparison.OrdinalIgnoreCase)))
    {
        members.Add((Model.Owner!, projectOwnerName ?? Model.Owner!));
    }

    var serializedMembers = JsonSerializer.Serialize(members.Select(m => new { email = m.Email, name = m.Name }));
    var isOwner = (ViewBag.IsOwner as bool?) ?? false;
    var description = string.IsNullOrWhiteSpace(Model.Description) ? "No description has been provided yet." : Model.Description;
    var profileSource = !string.IsNullOrWhiteSpace(currentUserName)
        ? currentUserName!
        : (!string.IsNullOrWhiteSpace(currentUserEmail) ? currentUserEmail! : "You");
    var profileInitial = profileSource.Trim()[0].ToString().ToUpper();
}
