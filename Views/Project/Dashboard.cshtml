    <div class="dashboard-shell">
        <div class="app-nav dashboard-nav">
            <div>
                <div class="badge-soft primary mb-2">Active project</div>
                <h1 class="app-title mb-1">@Model.ProjectName</h1>
                <div class="project-meta">
                    <span class="badge-soft">@Model.ProjectType</span>
                    <span class="badge-soft success"><i class="bi bi-people me-1"></i>@(Model.Members?.Count ?? 0) teammates</span>
                    <span class="badge-soft warning"><i class="bi bi-person-badge me-1"></i>Owner: @projectOwnerName</span>
                </div>
            </div>
            <div class="dashboard-actions">
                <a class="app-button-outline" asp-controller="Project" asp-action="CreateOrJoin">
                    <i class="bi bi-arrow-repeat"></i>Switch project
                </a>
                @if (isOwner)
                {
                    <a class="app-button-primary text-decoration-none" asp-controller="Project" asp-action="AddPeople">
                        <i class="bi bi-person-plus me-2"></i>Invite people
                    </a>
                }
                <a class="profile-chip text-decoration-none" asp-controller="Project" asp-action="Profile">
                    <div class="profile-initial">
                        @profileInitial
                    </div>
