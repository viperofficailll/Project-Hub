    <script>
        const projectId = @Model.Id;
        const tasksApiUrl = `/api/projects/${projectId}/tasks`;
        const userPool = @Html.Raw(serializedMembers);
        const memberDirectory = userPool.reduce((acc, member) => {
            if (member?.email) {
                acc[member.email] = member;
            }
            if (member?.name) {
                acc[member.name] = member;
            }
            return acc;
        }, {});
        let tasks = [];
        let currentEditingTask = null;
        let statusChart = null;
        let priorityChart = null;

        const stateOptions = [
            { value: "todo", text: "To-do" },
            { value: "inprogress", text: "In-progress" },
            { value: "completed", text: "Completed" },
            { value: "cancelled", text: "Cancelled" }
        ];

        const priorityOptions = [
            { value: "urgent", text: "Urgent ⛔" },
            { value: "high", text: "High ▲" },
            { value: "medium", text: "Medium ●" },
            { value: "low", text: "Low ●" },
            { value: "none", text: "None ⚪" }
        ];

        const stateColors = {
            todo: { bg: '#d8e8ff', color: '#0055cc' },
            inprogress: { bg: '#ffe8c2', color: '#d47300' },
            completed: { bg: '#d4f5d4', color: '#0f8a1c' },
            cancelled: { bg: '#ffd6d6', color: '#cc1b1b' }
        };

        const priorityColors = {
            urgent: { bg: '#ffd6d6', color: '#cc1b1b' },
            high: { bg: '#ffe0b3', color: '#d47300' },
            medium: { bg: '#fff2b3', color: '#d4a000' },
            low: { bg: '#d4f5d4', color: '#0f8a1c' },
            none: { bg: '#f0f0f0', color: '#777' }
        };

        function resolveMember(identifier) {
            if (!identifier) {
                return { name: 'Unassigned', email: '' };
            }
            const member = memberDirectory[identifier];
            if (member) {
                return {
                    name: member.name || member.email || identifier,
                    email: member.email || ''
                };
            }
            return { name: identifier, email: '' };
        }

        function normalizeTaskAssignees(task) {
            if (!task) return task;
            task.assignees = (task.assignees || []).map(value => memberDirectory[value]?.email ?? value);
            return task;
        }

        async function loadTasks() {
            try {
                const response = await fetch(tasksApiUrl);
                if (!response.ok) {
                    throw new Error("Failed to load tasks");
                }
                const data = await response.json();
                tasks = data.map(task => normalizeTaskAssignees(task));
            } catch (error) {
                console.error(error);
                tasks = [];
            }

            renderAllTasks();
            updateOverviewStats();
        }

        // Utility Functions
        function getAssigneeHtml(assignees) {
            if (!assignees || assignees.length === 0) {
                return `<span style="font-size:12px; font-weight:500; color: #999;">Unassigned</span>`;
            }

            let html = '';
            assignees.slice(0, 3).forEach((identifier) => {
                const member = resolveMember(identifier);
                const hash = member.name.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
                const color = `hsl(${hash % 360}, 60%, 50%)`;
                html += `
                    <div class="assignee-chip" title="${member.email || member.name}">
                        <div class="avatar" style="background-color: ${color};">${member.name.charAt(0).toUpperCase()}</div>
                        <span>${member.name}</span>
                    </div>
                `;
            });

            if (assignees.length > 3) {
                const extraCount = assignees.length - 3;
                const extraTitle = assignees.slice(3).map(id => resolveMember(id).name).join(', ');
                html += `<div class="assignee-chip extra" title="${extraTitle}">+${extraCount}</div>`;
            }

            return html;
        }

        function formatDate(dateString) {
            if (!dateString) return "No due date";
            const date = new Date(dateString + 'T00:00:00');
            return date.toLocaleDateString(undefined, { year: "numeric", month: "short", day: "numeric" });
        }

        function populateDropdown(dropdown, options, currentValue) {
            dropdown.innerHTML = options.map(opt =>
                `<option value="${opt.value}" ${opt.value === currentValue ? 'selected' : ''}>${opt.text}</option>`
            ).join('');
        }

        function syncDropdownColor(dropdown, colors) {
            const value = dropdown.value;
            Object.keys(colors).forEach(key => dropdown.classList.remove(key));
            dropdown.classList.add(value);
            dropdown.style.backgroundColor = colors[value].bg;
            dropdown.style.color = colors[value].color;
        }

        // Create Task Card
        function createTaskCard(task) {
            const card = document.createElement('div');
            card.className = 'task-card';
            card.draggable = true;
            card.setAttribute('data-task-id', task.id);

            card.innerHTML = `
                <div class="task-card-header">
                    <div class="task-card-title">${task.title || 'Untitled Task'}</div>
                    <span class="options-icon" onclick="openEditModal(${task.id})">
                        <i class="bi bi-three-dots"></i>
                    </span>
                </div>
                <div class="task-card-description">${task.description || 'No description'}</div>
                <div class="task-card-meta">
                    <select class="task-status ${task.status}" onchange="updateTaskStatus(${task.id}, this.value)">
                        ${stateOptions.map(opt =>
                            `<option value="${opt.value}" ${opt.value === task.status ? 'selected' : ''}>${opt.text}</option>`
                        ).join('')}
                    </select>
                    <select class="task-priority ${task.priority}" onchange="updateTaskPriority(${task.id}, this.value)">
                        ${priorityOptions.map(opt =>
                            `<option value="${opt.value}" ${opt.value === task.priority ? 'selected' : ''}>${opt.text}</option>`
                        ).join('')}
                    </select>
                    <div class="date-info-wrapper" onclick="openEditModal(${task.id})">
                        <i class="bi bi-calendar2-day"></i>
                        <span>${formatDate(task.dueDate)}</span>
                    </div>
                    <div class="assigned-container" onclick="openEditModal(${task.id})">
                        ${getAssigneeHtml(task.assignees)}
                    </div>
                </div>
            `;

            // Drag events
            card.addEventListener('dragstart', handleDragStart);
            card.addEventListener('dragend', handleDragEnd);

            // Apply colors to dropdowns
            const statusDropdown = card.querySelector('.task-status');
            const priorityDropdown = card.querySelector('.task-priority');
            syncDropdownColor(statusDropdown, stateColors);
            syncDropdownColor(priorityDropdown, priorityColors);

            return card;
        }

        // Update Overview Statistics
        function updateOverviewStats() {
            const totalTasks = tasks.length;
            const completedTasks = tasks.filter(t => t.status === 'completed').length;
            const inProgressTasks = tasks.filter(t => t.status === 'inprogress').length;
            const todoTasks = tasks.filter(t => t.status === 'todo').length;
            const completionPercentage = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;

            // Update stat cards
            document.getElementById('totalTasks').textContent = totalTasks;
            document.getElementById('inProgressTasks').textContent = inProgressTasks;
            document.getElementById('completedTasks').textContent = completedTasks;
            document.getElementById('completionPercentage').textContent = completionPercentage + '%';

            // Update progress bar
            const progressBarFill = document.getElementById('progressBarFill');
            const progressBarText = document.getElementById('progressBarText');
            progressBarFill.style.width = completionPercentage + '%';
            progressBarText.textContent = completionPercentage + '%';

            // Update charts
            updateCharts(todoTasks, inProgressTasks, completedTasks);
        }

        // Update Charts
        function updateCharts(todoCount, inProgressCount, completedCount) {
            // Count priorities
            const urgentCount = tasks.filter(t => t.priority === 'urgent').length;
            const highCount = tasks.filter(t => t.priority === 'high').length;
            const mediumCount = tasks.filter(t => t.priority === 'medium').length;
            const lowCount = tasks.filter(t => t.priority === 'low').length;
            const noneCount = tasks.filter(t => t.priority === 'none').length;

            // Status Chart
            if (statusChart) {
                statusChart.destroy();
            }

            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['To Do', 'In Progress', 'Completed'],
                    datasets: [{
                        data: [todoCount, inProgressCount, completedCount],
                        backgroundColor: ['#d8e8ff', '#ffe8c2', '#d4f5d4'],
                        borderColor: ['#0055cc', '#d47300', '#0f8a1c'],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: {
                                    size: 12
                                }
                            }
                        }
                    }
                }
            });

            // Priority Chart
            if (priorityChart) {
                priorityChart.destroy();
            }

            const priorityCtx = document.getElementById('priorityChart').getContext('2d');
            priorityChart = new Chart(priorityCtx, {
                type: 'bar',
                data: {
                    labels: ['Urgent', 'High', 'Medium', 'Low', 'None'],
                    datasets: [{
                        label: 'Tasks',
                        data: [urgentCount, highCount, mediumCount, lowCount, noneCount],
                        backgroundColor: ['#ffd6d6', '#ffe0b3', '#fff2b3', '#d4f5d4', '#f0f0f0'],
                        borderColor: ['#cc1b1b', '#d47300', '#d4a000', '#0f8a1c', '#777'],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Render All Tasks
        function renderAllTasks() {
            renderKanbanView();
            renderListView();
            updateTaskCounts();
        }

        // Render Kanban View
        function renderKanbanView() {
            const todoColumn = document.getElementById('todoColumn');
            const inprogressColumn = document.getElementById('inprogressColumn');
            const completedColumn = document.getElementById('completedColumn');

            todoColumn.innerHTML = '';
            inprogressColumn.innerHTML = '';
            completedColumn.innerHTML = '';

            tasks.forEach(task => {
                const card = createTaskCard(task);
                if (task.status === 'todo') {
                    todoColumn.appendChild(card);
                } else if (task.status === 'inprogress') {
                    inprogressColumn.appendChild(card);
                } else if (task.status === 'completed') {
                    completedColumn.appendChild(card);
                }
            });
        }

        // Render List View
        function renderListView() {
            const listViewContent = document.getElementById('listViewContent');
            listViewContent.innerHTML = '';

            tasks.forEach(task => {
                const listCard = createListTaskCard(task);
                listViewContent.appendChild(listCard);
            });
        }

        // Create List Task Card
        function createListTaskCard(task) {
            const card = document.createElement('div');
            card.className = 'list-task-card';
            card.setAttribute('data-task-id', task.id);

            card.innerHTML = `
                <div class="list-task-header">
                    <div class="list-task-title">${task.title || 'Untitled Task'}</div>
                    <span class="options-icon" onclick="openEditModal(${task.id})">
                        <i class="bi bi-three-dots"></i>
                    </span>
                </div>
                <div class="list-task-description">${task.description || 'No description'}</div>
                <div class="list-task-meta">
                    <select class="task-status ${task.status}" onchange="updateTaskStatus(${task.id}, this.value)">
                        ${stateOptions.map(opt =>
                            `<option value="${opt.value}" ${opt.value === task.status ? 'selected' : ''}>${opt.text}</option>`
                        ).join('')}
                    </select>
                    <select class="task-priority ${task.priority}" onchange="updateTaskPriority(${task.id}, this.value)">
                        ${priorityOptions.map(opt =>
                            `<option value="${opt.value}" ${opt.value === task.priority ? 'selected' : ''}>${opt.text}</option>`
                        ).join('')}
                    </select>
                    <div class="date-info-wrapper" onclick="openEditModal(${task.id})">
                        <i class="bi bi-calendar2-day"></i>
                        <span>${formatDate(task.dueDate)}</span>
                    </div>
                    <div class="assigned-container" onclick="openEditModal(${task.id})">
                        ${getAssigneeHtml(task.assignees)}
                    </div>
                </div>
            `;

            // Apply colors to dropdowns
            const statusDropdown = card.querySelector('.task-status');
            const priorityDropdown = card.querySelector('.task-priority');
            syncDropdownColor(statusDropdown, stateColors);
            syncDropdownColor(priorityDropdown, priorityColors);

            return card;
        }

        // Update Task Counts
        function updateTaskCounts() {
            document.querySelectorAll('.kanban-column').forEach(column => {
                const count = column.querySelector('.column-content').children.length;
                column.querySelector('.task-count').textContent = count;
            });
        }

        // Create New Task
        function openCreateTaskModal(status) {
            currentEditingTask = {
                id: null,
                title: "",
                description: "",
                status: status,
                priority: "medium",
                assignees: [],
                dueDate: ""
            };
            populateTaskModal(currentEditingTask);
        }

        // Update Task Status
        async function updateTaskStatus(taskId, newStatus) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            const payload = {
                title: task.title,
                description: task.description,
                status: newStatus,
                priority: task.priority,
                dueDate: task.dueDate,
                assignees: task.assignees || []
            };

            try {
                await updateTaskOnServer(taskId, payload);
                await loadTasks();
            } catch (error) {
                console.error(error);
                alert("Failed to update task status.");
            }
        }

        // Update Task Priority
        async function updateTaskPriority(taskId, newPriority) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            const payload = {
                title: task.title,
                description: task.description,
                status: task.status,
                priority: newPriority,
                dueDate: task.dueDate,
                assignees: task.assignees || []
            };

            try {
                await updateTaskOnServer(taskId, payload);
                await loadTasks();
            } catch (error) {
                console.error(error);
                alert("Failed to update task priority.");
            }
        }

        // Open Edit Modal
        function openEditModal(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            const normalizedAssignees = (task.assignees || []).map(value => memberDirectory[value]?.email ?? value);

            currentEditingTask = {
                ...task,
                assignees: normalizedAssignees
            };

            populateTaskModal(currentEditingTask);
        }

        function populateTaskModal(task) {
            const modal = document.getElementById('editTaskModal');

            document.getElementById('editTitle').value = task.title || "";
            document.getElementById('editDescription').value = task.description || "";
            document.getElementById('modalDueDateInput').value = task.dueDate || "";

            const modalStateDropdown = document.getElementById('modalStateDropdown');
            const modalPriorityDropdown = document.getElementById('modalPriorityDropdown');

            populateDropdown(modalStateDropdown, stateOptions, task.status || "todo");
            syncDropdownColor(modalStateDropdown, stateColors);

            populateDropdown(modalPriorityDropdown, priorityOptions, task.priority || "medium");
            syncDropdownColor(modalPriorityDropdown, priorityColors);

            modalStateDropdown.onchange = () => syncDropdownColor(modalStateDropdown, stateColors);
            modalPriorityDropdown.onchange = () => syncDropdownColor(modalPriorityDropdown, priorityColors);

            renderModalAssigneeList(task.assignees || []);

            modal.style.display = "flex";
        }

        // Render Assignee List in Modal
        function renderModalAssigneeList(currentAssignees) {
            const modalAssigneeList = document.getElementById('modalAssigneeList');
            modalAssigneeList.innerHTML = '';

            if (!userPool || userPool.length === 0) {
                modalAssigneeList.innerHTML = '<p class="text-sm text-gray-500">No project members yet.</p>';
                return;
            }

            const normalizedSelections = new Set(
                (currentAssignees || []).map(value => memberDirectory[value]?.email ?? value)
            );

            userPool.forEach(user => {
                const isSelected = normalizedSelections.has(user.email);

                const optionDiv = document.createElement('div');
                optionDiv.className = `user-option ${isSelected ? 'selected' : ''}`;
                optionDiv.dataset.email = user.email;
                optionDiv.innerHTML = `
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" ${isSelected ? 'checked' : ''} class="h-4 w-4 text-indigo-600 border-gray-300 rounded pointer-events-none">
                        <div>
                            <span class="font-semibold">${user.name}</span>
                            <div class="text-xs text-gray-500">${user.email}</div>
                        </div>
                    </div>
                    ${isSelected ? '<i class="bi bi-check-lg text-indigo-600"></i>' : ''}
                `;

                optionDiv.addEventListener('click', () => toggleUserOption(optionDiv));

                modalAssigneeList.appendChild(optionDiv);
            });
        }

        function toggleUserOption(optionDiv) {
            const checkbox = optionDiv.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
            optionDiv.classList.toggle('selected');

            let checkIcon = optionDiv.querySelector('.bi-check-lg');
            if (checkbox.checked) {
                if (!checkIcon) {
                    optionDiv.insertAdjacentHTML('beforeend', '<i class="bi bi-check-lg text-indigo-600"></i>');
                }
            } else if (checkIcon) {
                checkIcon.remove();
            }
        }

        function collectSelectedAssignees() {
            const selectedAssignees = [];
            document.querySelectorAll('#modalAssigneeList .user-option.selected').forEach(option => {
                const email = option.dataset.email;
                const fallback = option.querySelector('.font-semibold')?.textContent;
                if (email) {
                    selectedAssignees.push(email);
                } else if (fallback) {
                    selectedAssignees.push(fallback);
                }
            });
            return selectedAssignees;
        }

        async function saveTask() {
            if (!currentEditingTask) return;

            const payload = {
                title: document.getElementById('editTitle').value?.trim() || 'Untitled Task',
                description: document.getElementById('editDescription').value,
                status: document.getElementById('modalStateDropdown').value,
                priority: document.getElementById('modalPriorityDropdown').value,
                dueDate: document.getElementById('modalDueDateInput').value || null,
                assignees: collectSelectedAssignees()
            };

            try {
                if (currentEditingTask.id) {
                    await updateTaskOnServer(currentEditingTask.id, payload);
                } else {
                    await createTaskOnServer(payload);
                }

                closeEditModal();
                await loadTasks();
            } catch (error) {
                console.error(error);
                alert('Failed to save the task. Please try again.');
            }
        }

        async function createTaskOnServer(payload) {
            const response = await fetch(tasksApiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                throw new Error(await response.text());
            }

            return response.json();
        }

        async function updateTaskOnServer(taskId, payload) {
            const response = await fetch(`${tasksApiUrl}/${taskId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                throw new Error(await response.text());
            }

            return response.json();
        }

        async function deleteTaskFromServer(taskId) {
            const response = await fetch(`${tasksApiUrl}/${taskId}`, {
                method: 'DELETE'
            });

            if (!response.ok) {
                throw new Error(await response.text());
            }
        }

        async function deleteTask() {
            if (!currentEditingTask?.id) return;

            if (!confirm('Are you sure you want to delete this task?')) {
                return;
            }

            try {
                await deleteTaskFromServer(currentEditingTask.id);
                closeEditModal();
                await loadTasks();
            } catch (error) {
                console.error(error);
                alert('Failed to delete the task. Please try again.');
            }
        }

        // Close Edit Modal
        function closeEditModal() {
            document.getElementById('editTaskModal').style.display = "none";
            currentEditingTask = null;
        }

        // Drag and Drop Handlers
        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
            e.dataTransfer.setData('text/html', this.innerHTML);
        }

        function handleDragEnd(e) {
            this.classList.remove('dragging');
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            return false;
        }

        function handleDragEnter(e) {
            if (e.target.classList.contains('column-content')) {
                e.target.classList.add('drag-over');
            }
        }

        function handleDragLeave(e) {
            if (e.target.classList.contains('column-content')) {
                e.target.classList.remove('drag-over');
            }
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }

            const dropTarget = e.target.classList.contains('column-content') ? e.target : e.target.closest('.column-content');
            if (!dropTarget) return false;

            dropTarget.classList.remove('drag-over');

            if (draggedElement) {
                const newStatus = dropTarget.closest('.kanban-column').getAttribute('data-status');
                const taskId = parseInt(draggedElement.getAttribute('data-task-id'));

                const task = tasks.find(t => t.id === taskId);
                if (task) {
                    updateTaskStatus(taskId, newStatus);
                }
            }

            return false;
        }

        // Setup Drop Zones
        function setupDropZones() {
            const columns = document.querySelectorAll('.column-content');
            columns.forEach(column => {
                column.addEventListener('dragover', handleDragOver);
                column.addEventListener('dragenter', handleDragEnter);
                column.addEventListener('dragleave', handleDragLeave);
                column.addEventListener('drop', handleDrop);
            });
        }

        // Close modal when clicking outside
        document.getElementById('editTaskModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) {
                closeEditModal();
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            loadTasks();
            setupDropZones();
            setupNavigation();
        });

        // Setup Navigation
        function setupNavigation() {
            const overviewTab = document.getElementById('overviewTab');
            const workitemsTab = document.getElementById('workitemsTab');
            const listViewBtn = document.getElementById('listViewBtn');
            const kanbanViewBtn = document.getElementById('kanbanViewBtn');
            const listView = document.getElementById('listView');
            const boardView = document.getElementById('boardView');
            const overviewPage = document.getElementById('overviewPage');

            // Tab navigation
            overviewTab.addEventListener('click', () => {
                overviewTab.classList.add('active');
                workitemsTab.classList.remove('active');

                // Show overview page, hide work items views
                overviewPage.style.display = 'block';
                listView.style.display = 'none';
                boardView.style.display = 'none';

                // Update overview stats when switching to overview
                updateOverviewStats();

                // Hide view toggle buttons when on overview
                listViewBtn.style.display = 'none';
                kanbanViewBtn.style.display = 'none';
            });

            workitemsTab.addEventListener('click', () => {
                workitemsTab.classList.add('active');
                overviewTab.classList.remove('active');

                // Hide overview page
                overviewPage.style.display = 'none';

                // Show view toggle buttons
                listViewBtn.style.display = 'flex';
                kanbanViewBtn.style.display = 'flex';

                // Show the currently active view (kanban by default)
                if (kanbanViewBtn.classList.contains('active')) {
                    boardView.style.display = 'flex';
                    listView.style.display = 'none';
                } else {
                    listView.style.display = 'block';
                    boardView.style.display = 'none';
                }
            });

            // View toggle buttons
            listViewBtn.addEventListener('click', () => {
                listViewBtn.classList.add('active');
                kanbanViewBtn.classList.remove('active');
                listView.style.display = 'block';
                boardView.style.display = 'none';
            });

            kanbanViewBtn.addEventListener('click', () => {
                kanbanViewBtn.classList.add('active');
                listViewBtn.classList.remove('active');
                listView.style.display = 'none';
                boardView.style.display = 'flex';
            });
        }
    </script>
